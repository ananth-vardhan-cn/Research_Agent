{
  "manifest_version": 3,
  "name": "Propaganda Extension",
  "version": "0.0.1",
  "description": "Standalone browser extension project skeleton.",
  "action": {
    "default_title": "Propaganda Extension",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["assets/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": ["http://localhost:8000/*", "*://www.youtube.com/*", "*://*.youtube.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
