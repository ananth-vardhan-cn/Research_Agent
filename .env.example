# Research Agent Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Primary LLM provider: gemini, anthropic, or openai
LLM_PROVIDER=gemini

# Google Gemini
LLM_GEMINI_API_KEY=
LLM_GEMINI_MODEL=gemini-2.0-flash-exp

# Anthropic Claude
LLM_ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI
LLM_OPENAI_API_KEY=your_openai_api_key_here
LLM_OPENAI_MODEL=gpt-4-turbo-preview

# Model parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# =============================================================================
# TAVILY SEARCH CONFIGURATION
# =============================================================================
TAVILY_API_KEY=
TAVILY_MAX_RESULTS=5
TAVILY_SEARCH_DEPTH=advanced

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage backend: sqlite or redis
STORAGE_BACKEND=sqlite

# SQLite configuration
STORAGE_SQLITE_PATH=./data/research_agent.db

# Redis configuration (if using redis backend)
STORAGE_REDIS_URL=redis://localhost:6379/0
STORAGE_REDIS_TTL=86400

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_MAX_CONCURRENT=10
RATE_LIMIT_RETRY_ATTEMPTS=3
RATE_LIMIT_RETRY_BACKOFF=2.0

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_RECURSION_LIMIT=25
AGENT_MAX_ITERATIONS=20
AGENT_COST_CAP_USD=5.0
AGENT_TIMEOUT_SECONDS=300

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1
# Comma-separated list of CORS origins (use * for all)
API_CORS_ORIGINS=*

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: json, console, or rich
LOG_FORMAT=rich
# Optional log file path (leave empty for stdout only)
LOG_FILE=
